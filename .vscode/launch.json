{
    "version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "$${{name}} (local)",
			"preLaunchTask": "build",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/server/dist/styles.js",
			"cwd": "${workspaceFolder}/server",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"env": {
				"PGHOST": "$${{dbServer}}",
				"PGUSER": "$${{dbName}}",
				"PGPASSWORD": "$${{dbName}}",
				"PGDATABASE": "$${{dbName}}"
			}
		}
	]
}